.evan-form-item-container {
  border-bottom: 1rpx solid #eee;
}
.evan-form-item-container__label {
    font-size: 28rpx;
    color: #666;
    line-height: 40rpx;
    padding: 25rpx 0;
    display: inline-block;
}
.evan-form-item-container__label.showAsteriskRect::before {
      content: '';
      color: #F56C6C;
      width: 20rpx;
      display: inline-block;
}
.evan-form-item-container__label.isRequired::before {
      content: '*';
}
.evan-form-item-container__main {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
        -ms-flex: 1;
            flex: 1;
    min-height: 90rpx;
